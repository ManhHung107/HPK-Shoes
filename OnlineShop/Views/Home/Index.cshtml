@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listNewProducts = (List<Model.EF.Product>)ViewBag.NewProducts;
    var listFeatureProducts = (List<Model.EF.Product>)ViewBag.ListFeatureProducts;
}
<div class="banner-grid">
    <div id="visual">
        <div class="slide-visual">
            <!-- Slide Image Area (1000 x 424) -->
            <ul class="slide-group">
                <li><img class="img-responsive" src="/assets/client/Image/layout3.jpg" alt="Dummy Image" /></li>
                <li><img class="img-responsive" src="/assets/client/Image/layout2.jpg" alt="Dummy Image" /></li>
                <li><img class="img-responsive" src="/assets/client/Image/layout1.jpg" alt="Dummy Image" /></li>
            </ul>

            <!-- Slide Description Image Area (316 x 328) -->
            <div class="script-wrap">
                <ul class="script-group">
                    <li><div class="inner-script"><img class="img-responsive" src="/assets/client/Image/layoutt3.jpg" alt="Dummy Image" /></div></li>
                    <li><div class="inner-script"><img class="img-responsive" src="/assets/client/Image/layoutt2.jpg" alt="Dummy Image" /></div></li>
                    <li><div class="inner-script"><img class="img-responsive" src="/assets/client/Image/layoutt1.jpg" alt="Dummy Image" /></div></li>
                </ul>
                <div class="slide-controller">
                    <a href="#" class="btn-prev"><img src="/assets/client/Image/btn_prev.png" alt="Prev Slide" /></a>
                    <a href="#" class="btn-play"><img src="/assets/client/Image/btn_play.png" alt="Start Slide" /></a>
                    <a href="#" class="btn-pause"><img src="/assets/client/Image/btn_pause.png" alt="Pause Slide" /></a>
                    <a href="#" class="btn-next"><img src="/assets/client/Image/btn_next.png" alt="Next Slide" /></a>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
    <script type="text/javascript" src="assets/client/js/pignose.layerslider.js"></script>
    <script type="text/javascript">
        //<![CDATA[
        $(window).load(function () {
            $('#visual').pignoseLayerSlider({
                play: '.btn-play',
                pause: '.btn-pause',
                next: '.btn-next',
                prev: '.btn-prev'
            });
        });
        //]]>
    </script>

</div>
<div class="product-easy">
    <div class="container">

        <script src="assets/client/js/easyResponsiveTabs.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#horizontalTab').easyResponsiveTabs({
                    type: 'default', //Types: default, vertical, accordion
                    width: 'auto', //auto or any width like 600px
                    fit: true   // 100% fit in a container
                });
            });

        </script>
        <div class="sap_tabs">
            <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                <ul class="resp-tabs-list">
                    <li class="resp-tab-item" aria-controls="tab_item-0" role="tab"><span>Mới nhất</span></li>
                    <li class="resp-tab-item" aria-controls="tab_item-1" role="tab"><span>Hot nhất</span></li>
                    <li class="resp-tab-item" aria-controls="tab_item-2" role="tab"><span>Đang khuyến mãi</span></li>
                </ul>

                <div class="resp-tabs-container">
                    <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
                        @foreach (var item in listNewProducts)
                        {
                            var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                            <div class="col-md-3 product-men yes-marg" style="display:block">
                                <div class="men-pro-item simpleCart_shelfItem">
                                    <div class="men-thumb-item">
                                        <a href="@url"><img src="@item.Image" alt="@item.Name" class="pro-image-front"></a>
                                        <a href="@url"><img src="@item.Image" alt="@item.Name" class="pro-image-back"></a>
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="@url" class="link-product-add-cart">Chi tiết</a>
                                            </div>
                                        </div>
                                        <span class="product-new-top">New</span>
                                    </div>
                                    <div class="item-info-product ">
                                        <h4><a href="@url">@item.Name</a></h4>
                                        <div class="info-product-price">
                                            <p><span class="item_price">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")  VNĐ</span></p>
                                        </div>

                                        <div class="occasion-cart">
                                            <a href=@Url.Action("AddItem", "Cart", new { @productId = item.ID, @quantity=1, @strURL = Request.Url.ToString()}) class="item_add single-item hvr-outline-out button2">Thêm vào giỏ</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>

                        }

                    </div>
                    <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
                        @foreach (var item in listFeatureProducts)
                        {
                            var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                            <div class="col-md-3 product-men yes-marg">
                                <div class="men-pro-item simpleCart_shelfItem">
                                    <div class="men-thumb-item">
                                        <a href="@url"><img src="@item.Image" alt="@item.Name" class="pro-image-front"></a>
                                        <a href="@url"><img src="@item.Image" alt="@item.Name" class="pro-image-back"></a>
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="@url" class="link-product-add-cart">Chi tiết</a>
                                            </div>
                                        </div>
                                        <span class="product-hot-top">Hot</span>
                                    </div>
                                    <div class="item-info-product ">
                                        <h4><a href="@url">@item.Name</a></h4>
                                        <div class="info-product-price">
                                            <p><span class="item_price">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")  VNĐ</span></p>
                                        </div>
                                        <div class="occasion-cart">
                                            <a href=@Url.Action("AddItem", "Cart", new { @productId = item.ID, @quantity=1, @strURL = Request.Url.ToString()}) class="item_add single-item hvr-outline-out button2">Thêm vào giỏ</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        }
                    </div>
                    <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-2">
                        @foreach (var item in listNewProducts)
                        {
                            var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                            <div class="col-md-3 product-men yes-marg">
                                <div class="men-pro-item simpleCart_shelfItem">
                                    <div class="men-thumb-item">
                                        <a href="@url"><img src="@item.Image" alt="@item.Name" class="pro-image-front"></a>
                                        <a href="@url"><img src="@item.Image" alt="@item.Name" class="pro-image-back"></a>
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="@url" class="link-product-add-cart">Chi tiết</a>
                                            </div>
                                        </div>
                                        <span class="product-sale-top">Sale</span>
                                    </div>
                                    <div class="item-info-product ">
                                        <h4><a href="@url">@item.Name</a></h4>
                                        <div class="info-product-price">
                                            <p><span class="item_price">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")  VNĐ</span></p>
                                        </div>
                                        <div class="occasion-cart">
                                            <a href=@Url.Action("AddItem", "Cart", new { @productId = item.ID, @quantity=1, @strURL = Request.Url.ToString()}) class="item_add single-item hvr-outline-out button2">Thêm vào giỏ</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

